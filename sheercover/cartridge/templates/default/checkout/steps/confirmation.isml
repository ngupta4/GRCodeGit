<iscomment>ADDING CUSTOM OBJECT CHECKBOX TO DETERMINE SHOWING CONFIRMATION CROSS SELL - ASSUMES NAMING CONVENTION OF "-campaign"</iscomment>
<isscript>
	var showCrossSell:Boolean=false;
	var campy:Object=dw.object.CustomObjectMgr.getCustomObject("CampaignConfiguration",pdict.originalCampaignCode+"-campaign");
	if (campy!=null && campy.custom.showConfirmationCrossSell){ showCrossSell=true; }
</isscript>
 
<isif condition="${(!pdict.ServerError) && showCrossSell}">
	<isslot id="confirmation-cross-sell" description="Cross-sell on confirmation page" context="global" />
</isif>


<isscript>
  var orderId = pdict.Order.orderNo;
  var brand   = 'sheercover';

  var qty1  = qty2  = 0;
  var kit1  = kit2  = '';
  var prod1 = prod2 = '';
  var rev1  = rev2  = 0;

  var iter = pdict.Order.getAllProductLineItems().iterator();
  var loopc = 0;

  while (iter.hasNext()) {
    var pli = iter.next();

      if (loopc == 0) {
        qty1  = pli.quantityValue;
        kit1  = pli.product.ID;
        prod1 = pli.product.name;
      } else {
        qty2  = pli.quantityValue;
        kit2  = pli.product.ID;
        prod2 = pli.product.name;
      }

      brand = pli.product.brand;
      loopc = loopc + 1;
  }
  var revenue = 0;
  revenue =  pdict.Order.allProductLineItems[0].product.getPriceModel().getPrice().value + pdict.Order.giftCertificateTotalPrice.value;

  if (prod1.indexOf("Vitamins") != -1) {  
    rev1 = 0;
    rev2 = revenue;
  } else {
    rev1 = revenue;
    rev2 = 0;
  }  

</isscript>

<!--Begin LinkShare Tagging-->
<isif condition="${primaryUCI=='ous106'}">
<script type="text/javascript">
var brnd_pfix = "SC";
var brnd_name = "Sheer Cover:";
var LSmsg = "";
var LSord = "ord=" + brnd_pfix + "${pdict.Order.orderNo}";
var LSsku = "skulist=";
var LSqty = "qlist=";
var LSamt = "amtlist=";
var LSname = "namelist=";

function addLSitem(ls1,ls2,ls3,ls4) {
  LSsku = LSsku + brnd_pfix + escape(ls1) + "|";
  LSqty = LSqty + ls2 + "|";
  ls3 = ls3 * ls2 * 100;
  ls3 = ls3.toFixed(0);
  LSamt = LSamt + ls3 + "|";
  LSname = LSname + escape(brnd_name) + escape(ls4) + "|";
}

// Call AddLSitem(SKU Number, Qty Purchased, Item Unit Price, Item Name) for each item purchased.
addLSitem(
        "${kit1}",
        "${qty1}",
        "${rev1}",
        "${prod1}"
);


LSmsg = "mid=2637&cur=USD&" + LSord + "&" + LSsku + "&" + LSqty + "&" + LSamt + "&" + LSname;
document.write('<img src="https://track.linksynergy.com/ep?' + LSmsg + '" border="0" width="1px" height="1px" alt="">');
</script>
</isif>
<!--End LinkShare Tagging-->
