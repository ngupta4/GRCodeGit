	</group>
	<group formid="optout">
		<field formid="email" label="forms.emailsubscribe.optout.email.label" type="string" mandatory="true" regexp="(?i)^[a-z0-9!#$%&amp;&apos;*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&amp;&apos;*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+(?:[a-z]{2}|aero|arpa|asia|biz|cat|com|coop|edu|gov|info|int|jobs|mil|mobi|museum|name|net|org|pro|tel|travel)$" parse-error="forms.contactus.email.parse-error" max-length="50"/>
		<field formid="lastName" label="forms.emailsubscribe.optout.lastName.label" type="string" mandatory="true" max-length="50"/>
		<action formid="unsubscribe" valid-form="true"/>
	</group>
</form>